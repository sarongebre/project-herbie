{#
/**
 * @file
 * Theme override to display a block.
 *
 * Available variables:
 * - plugin_id: The ID of the block implementation.
 * - label: The configured label of the block if visible.
 * - configuration: A list of the block's configuration values.
 *   - label: The configured label for the block.
 *   - label_display: The display settings for the label.
 *   - provider: The module or other provider that provided this block plugin.
 *   - Block plugin specific settings will also be stored here.
 * - content: The content of this block.
 * - attributes: array of HTML attributes populated by modules, intended to
 *   be added to the main container tag of this template.
 *   - id: A valid HTML ID and guaranteed unique.
 * - title_attributes: Same as attributes, except applied to the main title
 *   tag that appears in the template.
 * - title_prefix: Additional output populated by modules, intended to be
 *   displayed in front of the main title tag that appears in the template.
 * - title_suffix: Additional output populated by modules, intended to be
 *   displayed after the main title tag that appears in the template.
 *
 * @see template_preprocess_block()
 */
#}


{% block content %}
  {% set outer_wrapper_attributes = create_attribute() %}
  {% set cardblock_wrapper_attributes = create_attribute() %}
  {% set image_wrapper_attributes = create_attribute() %}

  {% set outer_wrapper_attributes = outer_wrapper_attributes.addClass('dcf-card dcf-card-as-link dcf-d-flex dcf-flex-col unl-box-shadow dcf-mb-8 dcf-mt-8') %}
  {% set cardblock_wrapper_attributes = cardblock_wrapper_attributes.addClass('dcf-card-block dcf-2nd') %}
  {% set image_wrapper_attributes = image_wrapper_attributes.addClass('dcf-1st dcf-ratio dcf-ratio-4x3') %}

  {% set card_style = render_var(content.b_card_style[0]) %}
  {% set image_size = render_var(content.b_image_size[0]) %}

  {% if card_style == 'creme' %}
    {% set outer_wrapper_attributes = outer_wrapper_attributes.addClass('dcf-bg-cream') %}
  {% elseif card_style == 'scarlet' %}
    {% set outer_wrapper_attributes = outer_wrapper_attributes.removeClass('dcf-b-solid') %}
    {% set outer_wrapper_attributes = outer_wrapper_attributes.addClass(['unl-bg-scarlet', 'unl-cream', 'unl-b-lighter-gray']) %}
  {% elseif card_style == 'white' %}
    {% set outer_wrapper_attributes = outer_wrapper_attributes.addClass('dcf-bg-white') %}
  {% endif %}

  {# Commented out if for the future we would want to add this as an option #}
  {# {% if image_size == '1x1' %}
{% set image_wrapper_attributes = image_wrapper_attributes.addClass('dcf-ratio-1x1') %}
{% elseif image_size == '4x3' %}
{% set image_wrapper_attributes = image_wrapper_attributes.addClass('dcf-ratio-4x3') %}
{% elseif image_size == '16x9' %}
{% set image_wrapper_attributes = image_wrapper_attributes.addClass('dcf-ratio-16x9') %}
{% endif %} #}

  <div {{ outer_wrapper_attributes }}>
    <div {{ cardblock_wrapper_attributes }}>
      {% if content.b_card_overline[0] or content.b_card_subhead[0] %}
        {{ content.b_card_overline }}
        {{ content.b_card_headline }}
        {{ content.b_card_subhead }}
      {% else %}
        {{ content.b_card_headline }}
      {% endif %}

      {{ content.b_card_body }}

      {% if content.b_card_cta[0]['#url']%}
      {{ attach_library('unl_five_herbie/card') }}
      {{ content.b_card_cta }}
      {% endif %}
    </div>

    <div {{ image_wrapper_attributes }}>{{ content.b_card_image }}</div>
  </div>
{% endblock %}
