{% set attributes = attributes ?: create_attribute() %}
{% set card_classes = ['dcf-mb-8'] %}

<div{{ attributes.addclass(card_classes) }}>
  {{ title_prefix }}
  {{ title_suffix }}
  <div class="dcf-grid-thirds@sm dcf-col-gap-6 dcf-row-gap-3 dcf-pt-6 dcf-pb-6">
    {% block cta_title %}
      <div class="dcf-d-flex dcf-ai-center dcf-jc-center dcf-uppercase">
        {{ content.b_cta_title }}
      </div>
    {% endblock %}

    {% block cta_summary %}
      <div class="dcf-d-flex dcf-ai-center dcf-jc-center dcf-pt-2 dcf-pb-2 dcf-txt-center">
        {{ content.b_cta_summary }}
      </div>
    {% endblock %}

    {% block cta_link %}
      <div class="dcf-d-flex dcf-ai-center dcf-jc-center dcf-pt-2 dcf-pb-2">
        {{ content.b_cta_link }}
      </div>
    {% endblock %}
  </div>
</div>
